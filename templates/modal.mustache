{{!
    @template tiny_ai/modal

    Modal to manage ai content within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
        "elementid": "exampleId"
    }
}}
{{< core/modal }}

    {{$title}}
        {{#str}} buttontitle, tiny_ai {{/str}}
    {{/title}}

    {{$body}}
        <div id="{{elementid}}_tiny_ai_spinner" class="tiny-ai-loading-spinner hidden">
            <div class="spinner-border tiny-ai-spinner-style" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <div id="{{elementid}}_tiny_ai_blur" class="">
            <div id="{{elementid}}_tiny_ai_overlay" class="tiny-ai-overlay hidden"></div>
            <form class="mform" id="{{uniqid}}">
                <div class="form-group">
                    <label for="{{elementid}}_tiny_ai_prompttext">
                        {{#str}} prompttext_label, tiny_ai {{/str}}
                    </label>
                    <textarea
                            class="form-control"
                            id="{{elementid}}_tiny_ai_prompttext"
                            rows="3"
                            placeholder="{{#str}} prompttext_placeholder, tiny_ai {{/str}}"></textarea>
                    <label for="{{elementid}}_tiny_ai_responsetext">
                        {{#str}} responsetext_label, tiny_ai {{/str}}
                    </label>
                    <textarea
                            class="form-control"
                            id="{{elementid}}_tiny_ai_responsetext"
                            rows="3"
                            placeholder="{{#str}} responsetext_placeholder, tiny_ai {{/str}}"
                            disabled="disabled"></textarea>
                </div>
            </form>
        </div>
    {{/body}}

    {{$footer}}
        <button type="button"
                class="btn btn-secondary"
                data-action="cancel">
            {{#str}} cancel, moodle {{/str}}
        </button>
        <button type="button"
                class="btn btn-primary"
                data-action="generate">
            {{#str}} generate, tiny_ai{{/str}}
        </button>
        <button id="{{elementid}}_tiny_ai_insertbutton"
                type="button"
                class="btn btn-primary hidden"
                data-action="inserter">
            {{#str}} insert, tiny_ai{{/str}}
        </button>
    {{/footer}}

{{/ core/modal }}
