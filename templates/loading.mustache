{{!
    @template tiny_ai/modal

    Modal to manage ai content within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
    }
}}
{{< core/modal }}

    {{$title}}
        {{#str}} buttontitle, tiny_ai {{/str}}
    {{/title}}

    {{$body}}
        <form class="mform" id="{{uniqid}}">
            <div class="form-group">
                <label for="{{elementid}}_tiny_ai_prompttext">
                    {{#str}} prompttext_label, tiny_ai {{/str}}
                </label>
                <textarea
                        class="form-control"
                        id="{{elementid}}_tiny_ai_prompttext"
                        rows="3"
                        placeholder="{{#str}} prompttext_placeholder, tiny_ai {{/str}}"></textarea>
                <textarea
                        class="form-control"
                        id="{{elementid}}_tiny_ai_responsetext"
                        rows="3"
                        placeholder="{{#str}} responsetext_placeholder, tiny_ai {{/str}}"></textarea>
            </div>
        </form>
    {{/body}}

    {{$footer}}
        <button type="button"
                class="btn btn-secondary"
                data-action="cancel">
            {{#str}} cancel, moodle {{/str}}
        </button>
        <button type="button"
                class="btn btn-primary"
                data-action="generate">
            {{#str}} generate, tiny_ai{{/str}}
        </button>
    {{/footer}}

{{/ core/modal }}
